<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.locations.UI.ui_activity.NavigationFragment">


    <Button
        android:id="@+id/buttonAdmin"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:backgroundTint="@color/btnsAndInput"
        android:text="Admin Manager"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/btnStartNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnsAndInput"
        android:text="Start Navigation"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/buttonAdmin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:backgroundTint="@color/white"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnNews"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnsAndInput"
        android:text="Newsletter"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/btnStartNav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:backgroundTint="@color/white"
         />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/btnsAndInput"
        android:text="Logout"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNews"
        tools:backgroundTint="@color/white"
         />

</androidx.constraintlayout.widget.ConstraintLayout>